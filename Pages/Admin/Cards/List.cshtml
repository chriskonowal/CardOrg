    @section scripts {
        <script>
            $('#playerTable').DataTable();

            var hdnPlayerIds = $('#hdnPlayerIds').val().split(',');
            if (hdnPlayerIds.length > 0) {
                for (var i = 0; i < hdnPlayerIds.length; i++) {
                    var id = hdnPlayerIds[i];
                    $('.chkPlayerId').each(function (index, val) {
                        if ($(val).val() == id) {
                            $(val).prop('checked', true);
                        }
                    });
                }
            }

            $('.chkPlayerId').on('change', function () {
                $('#hdnPlayerIds').val('');
                var playerIds = ''
                $('.chkPlayerId').each(function (index, val) {
                    if ($(val).is(':checked')) {
                        if (playerIds.length > 0) {
                            playerIds += ','
                        }
                        playerIds += $(val).val();
                    }
                });
                $('#hdnPlayerIds').val(playerIds);
            });

            $('#teamTable').DataTable();

            var hdnTeamIds = $('#hdnTeamIds').val().split(',');
            if (hdnTeamIds.length > 0) {
                for (var i = 0; i < hdnTeamIds.length; i++) {
                    var id = hdnTeamIds[i];
                    $('.chkTeamId').each(function (index, val) {
                        if ($(val).val() == id) {
