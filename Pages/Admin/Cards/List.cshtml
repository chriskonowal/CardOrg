                        }
                    });
                }
            }
            $('.chkTeamId').on('change', function () {
                $('#hdnTeamIds').val('');
                var playerIds = ''
                $('.chkTeamId').each(function (index, val) {
                    if ($(val).is(':checked')) {
                        if (playerIds.length > 0) {
                            playerIds += ','
                        }
                        playerIds += $(val).val();
                    }
                });
                $('#hdnTeamIds').val(playerIds);
            });

            $('.btnAdd').button({
                icon: "ui-icon-plus"
            });

            $('.ddlForm').select2({
                width: 'resolve',
